<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/edit_profile"
                android:textColor="@color/tv_color3"
                android:textSize="34px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="100px">

        <com.lvshandian.lemeng.widget.view.AvatarView
            android:id="@+id/iv_head"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@mipmap/no_head" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5px"
            android:src="@mipmap/ic_uploading_head" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <EditText
        android:id="@+id/nick_name"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="150px"
        android:background="@drawable/edittext_shape_rectangle"
        android:hint="@string/input_right_nickname"
        android:maxLength="10"
        android:paddingLeft="20px"
        android:textSize="30px" />

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="100px"
        android:background="@drawable/selector_loginbtn_circle"
        android:gravity="center"
        android:inputType="phone"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="36px" />


</com.zhy.autolayout.AutoLinearLayout>
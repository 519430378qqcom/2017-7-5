<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayF1"
    android:orientation="vertical">
    <!--提现-->
    <include layout="@layout/title_bar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_withdraw_num"
            android:textColor="@color/black"
            android:textSize="30px" />

        <TextView
            android:id="@+id/can_draw_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textColor="@color/red"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_num"
            android:textColor="@color/black"
            android:textSize="30px" />

        <EditText
            android:id="@+id/red_package_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/please_input_withdraw_num"
            android:inputType="numberDecimal"
            android:paddingLeft="50px"
            android:textSize="30px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alipay_num"
            android:textColor="@color/black"
            android:textSize="30px" />

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="20px"
            android:src="@mipmap/ali_pay" />

        <EditText
            android:id="@+id/alipay_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/please_input_alipay_num"
            android:paddingLeft="8px"
            android:textSize="30px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="@string/wait_withdraw"
        android:textSize="25px" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/WhiteButtonStyle"
        android:layout_marginTop="20px"
        android:text="@string/withdraw" />
</com.zhy.autolayout.AutoLinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <!--直播间用户信息弹框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_suqare_coners"
        android:orientation="vertical"
        android:paddingBottom="20px"
        android:paddingTop="20px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px">

            <com.lvshandian.lemeng.widget.view.AvatarView
                android:id="@+id/civ_image"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginLeft="15px"
                android:src="@mipmap/head_default" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/civ_image"
                android:text="小尚"
                android:textColor="@color/black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_guard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/tv_name"
                android:textColor="@color/black"
                android:textSize="32px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout

            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:background="@drawable/shape_white_suqare_coners"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_white_suqare_coners"
                android:orientation="vertical">


                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_guard18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_white_suqare_coners"
                    android:orientation="vertical"
                    android:padding="15px">

                    <ImageView
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:src="@mipmap/guard_18" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:text="18元守护"
                    android:textColor="@color/black"
                    android:textSize="23px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="（无海乐票赠送）"
                    android:textSize="17px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_white_suqare_coners"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_guard68"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_white_suqare_coners"
                    android:orientation="vertical"
                    android:padding="15px">

                    <ImageView
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/guard_68" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:text="68元守护"
                    android:textColor="@color/black"
                    android:textSize="23px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="（无海乐票赠送）"
                    android:textSize="17px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_white_suqare_coners"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/rl_guard128"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_white_suqare_coners"
                    android:orientation="vertical"
                    android:padding="15px">

                    <ImageView
                        android:layout_width="45px"
                        android:layout_height="45px"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/guard_128" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:text="128元守护"
                    android:textColor="@color/black"
                    android:textSize="23px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:text="（无海乐票赠送）"
                    android:textSize="17px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_become_guard"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="30px"
            android:background="@drawable/selector_loginbtn"
            android:gravity="center"
            android:text="成为守护"
            android:textColor="@color/white"

            android:textSize="22px" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>


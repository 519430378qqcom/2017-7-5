<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--登录-->
    <include layout="@layout/title_bar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_quhao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="84px">

            <TextView
                android:id="@+id/tv_quhao"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中国 +86"
                android:textColor="@color/main"
                android:textSize="36px" />

            <ImageView
                android:layout_width="33px"
                android:layout_height="33px"
                android:src="@mipmap/donw_hui"
                android:layout_marginRight="10px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/line_df" />


        <EditText
            android:id="@+id/ed_login_phone"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="80px"
            android:background="@null"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColorHint="@color/line_cf"
            android:textSize="36px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/line_df" />

        <EditText
            android:id="@+id/ed_login_password"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginTop="80px"
            android:background="@null"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/line_cf"
            android:textSize="36px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/line_df" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="62px"
            android:paddingBottom="20px"
            android:paddingLeft="20px"
            android:paddingTop="20px"
            android:text="@string/forget_password"
            android:textColor="@color/main"
            android:textSize="30px" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:background="@drawable/selector_loginbtn_circle"
            android:gravity="center"
            android:inputType="phone"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="36px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:padding="10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意乐檬"
                android:textColor="@color/line_cf"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textColor="@color/main"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
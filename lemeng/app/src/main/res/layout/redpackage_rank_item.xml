<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10px">

    <com.lvshandian.lemeng.widget.view.AvatarView
        android:id="@+id/iv_rank_head"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="20px"
        android:src="@mipmap/head_default" />

    <TextView
        android:id="@+id/iv_rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20px"
        android:singleLine="true"
        android:layout_toRightOf="@+id/iv_rank_head"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="NAME"/>

    <TextView
        android:id="@+id/tv_rank_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_icon_coin"
        android:layout_marginRight="20px"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="66"/>

    <ImageView
        android:id="@+id/iv_icon_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:src="@mipmap/niu_jinbi" />
</com.zhy.autolayout.AutoLinearLayout>
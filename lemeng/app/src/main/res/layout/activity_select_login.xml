<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#40000000" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150px">

        <ImageView
            android:id="@+id/iv_facebook_login"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="116px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_facebook"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_twitter_login"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginRight="30px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_twitter"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_google_login"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginRight="30px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_google"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_wechat_login"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginRight="30px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_wechat"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_moble_login"
            android:layout_width="80px"
            android:layout_height="80px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_moble" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>

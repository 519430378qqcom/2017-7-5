<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#40000000" />

    <ImageView
        android:layout_width="350px"
        android:layout_height="144px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="720px"
        android:src="@mipmap/icon_lemon" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150px">

        <ImageView
            android:id="@+id/iv_facebook_login"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="30px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_facebook"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_twitter_login"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="30px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_twitter"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_google_login"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="30px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_google"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_wechat_login"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="30px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_wechat"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_moble_login"
            android:layout_width="100px"
            android:layout_height="100px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_moble" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/term_of_service"
        android:layout_width="wrap_content"
        android:layout_height="48px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/icon_round"
        android:text="@string/agree_term_of_service"
        android:gravity="center_vertical"
        android:drawablePadding="10px"
        android:textColor="@color/white"
        android:textSize="24px"
        android:padding="10px"
        android:layout_marginBottom="65px"/>

</com.zhy.autolayout.AutoRelativeLayout>

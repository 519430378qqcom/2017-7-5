<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#40000000" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245px"
        android:src="@mipmap/login_logo" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:text="海 颜 直 播   直 播 你 我"
        android:textColor="@color/white"
        android:textSize="34px" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:layout_marginTop="400px"
        android:gravity="center_horizontal"
        android:text="使用以下方式登录"
        android:textColor="@color/white"
        android:textSize="28px" />


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px">

        <ImageView
            android:id="@+id/iv_qqlogin"
            android:layout_width="110px"
            android:layout_height="wrap_content"
            android:layout_marginRight="120px"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_qq"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_wxlogin"
            android:layout_width="110px"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_def_wx" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phone_login_or_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号登录/注册"
            android:textColor="@color/main"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="3px"
            android:background="@color/main" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>

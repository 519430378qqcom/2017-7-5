<?xml version="1.0" encoding="utf-8"?>
<com.lvshandian.lemeng.view.HeadZoomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/my_head"
                android:layout_width="match_parent"
                android:layout_height="520px"
                android:scaleType="centerCrop"
                android:src="@mipmap/zhan_da" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_my_img_up" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_my_img_down" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="750px"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="50px"
                    android:drawableLeft="@mipmap/setting"
                    android:gravity="center_vertical"
                    android:padding="10px"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="750px"
                android:layout_height="180px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="昵称"
                        android:textColor="@color/backgroudcolor"
                        android:textSize="36px" />

                    <ImageView
                        android:id="@+id/sex"
                        style="@style/SexImageStyle"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/male" />

                    <ImageView
                        android:id="@+id/iv_level"
                        style="@style/LevelImageStyle"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/rank_1" />

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:src="@mipmap/bianji" />
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_above="@+id/tv_sign"
                    android:layout_marginBottom="5px"
                    android:text="乐檬号："
                    android:textColor="@color/backgroudcolor"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15px"
                    android:layout_marginLeft="30px"
                    android:text="签名哦"
                    android:textColor="@color/backgroudcolor"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="116px"
            android:background="@color/backgroudcolor">

            <TextView
                android:id="@+id/tv_gz"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="关注"
                android:textColor="@color/tv_color6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40px"
                android:text="0"
                android:textColor="@color/black" />

            <View
                android:layout_width="1px"
                android:layout_height="15px"
                android:layout_gravity="center_vertical"
                android:background="@color/line_df" />

            <TextView
                android:id="@+id/tv_fs"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="粉丝"
                android:textColor="@color/tv_color6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fanse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:text="0"
                android:textColor="@color/black" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/wide_line" />
        <!--贡献榜-->
        <include layout="@layout/my_item_gongxian_layout" />

        <!--我的乐票-->
        <!--<include layout="@layout/my_item_yanpiao_layout" />-->

        <!--我的回放-->
        <!--<include layout="@layout/my_item_huifang_layout" />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/wide_line" />
        <!--我的认证-->
        <include layout="@layout/my_item_renzheng_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:background="@color/line_df" />
        <!--我的等级-->
        <include layout="@layout/my_item_dengji_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/wide_line" />
        <!--我的相册-->
        <include layout="@layout/my_item_txxc_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/wide_line" />
        <!--我的短片-->
        <include layout="@layout/my_item_small_video_layout" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.lvshandian.lemeng.view.HeadZoomScrollView>
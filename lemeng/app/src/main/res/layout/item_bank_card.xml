<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="31px"
        android:layout_marginRight="31px"
        android:layout_marginTop="31px"
        android:layout_marginBottom="31px"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10px"
        app:cardElevation="5dp">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bankcard_green"
            android:padding="20px">

            <TextView
                android:id="@+id/tv_bankcard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:textColor="@color/white"
                android:textSize="30px"
                tools:text="农业银行" />

            <TextView
                android:id="@+id/tv_bankcard_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_bankcard_name"
                android:layout_below="@+id/tv_bankcard_name"
                android:layout_marginTop="10px"
                android:textColor="@color/white"
                android:textSize="30px"
                tools:text="储蓄卡" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="403px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bankcard_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="****"
                    android:textColor="@color/white"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="****"
                    android:textColor="@color/white"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="****"
                    android:textColor="@color/white"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_bank_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="28px"
                    tools:text="2028" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v7.widget.CardView>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_add_card"
        android:layout_width="630px"
        android:layout_height="106px"
        android:layout_marginTop="31px"
        android:layout_marginBottom="31px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_yellow_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_bank_card_"
            android:textColor="@color/main"
            android:textSize="36px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
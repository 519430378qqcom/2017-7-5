<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px">

                <com.lvshandian.lemeng.widget.view.AvatarView
                    android:id="@+id/iv_live_user_head"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/head_default"
                    app:border_color="@color/main"
                    app:border_width="1px" />

                <ImageView
                    android:id="@+id/vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="14px"
                    android:layout_marginLeft="-20px"
                    android:layout_toRightOf="@id/iv_live_user_head"
                    android:src="@mipmap/vip_orange"
                    android:visibility="gone"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:id="@+id/tv_live_nick"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13px"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="刘德华"
                android:textColor="@color/tv_color6"
                android:textSize="28px" />


            <TextView
                android:id="@+id/tv_live_usernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="33px"
                android:text="1295人在看"
                android:textColor="@color/tv_color9"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550px">

            <ImageView
                android:id="@+id/iv_live_user_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/zhan_da" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_marginTop="25px"
                android:src="@mipmap/liveing" />

            <ImageView
                android:id="@+id/iv_is_liveing"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_play_28"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>

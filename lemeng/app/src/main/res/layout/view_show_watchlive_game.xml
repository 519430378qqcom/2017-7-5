<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="520px"
    android:background="@mipmap/game_backgourd"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="520px"
        android:background="@color/transparent_blank"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15px"
            >

            <ImageView
                android:id="@+id/input_content"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="19px"
                android:src="@mipmap/mg_room_btn_xinxi" />

            <ImageView
                android:id="@+id/iv_ranking"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:src="@mipmap/mg_room_btn_ranking" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="15px"
            android:id="@+id/ll_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_live_gift"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/mg_room_btn_li" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19px"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="19px"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_live_privatechat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/mg_room_btn_xin"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/tab_new_indicator"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:contentDescription="@string/empty"
                        android:src="@drawable/nim_main_tab_new_message_notify"
                        android:visibility="gone" />

                    <com.netease.nim.uikit.common.ui.drop.DropFake
                        android:id="@+id/tab_new_msg_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30px"
                        android:layout_marginRight="30px"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginBottom="19px"
                    android:layout_marginLeft="19px"
                    android:background="@mipmap/mg_room_btn_xin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_live_share"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginBottom="19px"
                    android:layout_marginLeft="30px"
                    android:background="@mipmap/mg_room_btn_fen" />

                <ImageView
                    android:layout_width="60px"
                    android:visibility="gone"
                    android:layout_height="60px"
                    android:layout_marginBottom="19px"
                    android:layout_marginLeft="19px"
                    android:src="@mipmap/close_white" />

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:orientation="vertical"
            android:background="@mipmap/Rectangle_game"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:id="@+id/autoLinearLayout3">
            <GridView
                android:id="@+id/gd_view"
                android:numColumns="5"
                android:layout_width="match_parent"
                android:layout_height="260px">
            </GridView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="和值大于14即中奖"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="30px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/autoLinearLayout3"
            android:layout_alignStart="@+id/autoLinearLayout3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/niu_jinbi"
                />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1000万"
                   android:layout_marginLeft="10px"
                   android:textColor="@color/white"
                   />
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@mipmap/samll_add"
                  android:layout_marginLeft="10px"
                  />
                 <com.zhy.autolayout.AutoLinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:gravity="center"
                     android:layout_marginLeft="10px"
                     >
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="10"
                         android:textSize="10sp"
                         android:textColor="@color/yellow"
                         />
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="最小投注"
                         android:textColor="@color/yellow"
                         android:textSize="10sp"
                         />
                 </com.zhy.autolayout.AutoLinearLayout>
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@mipmap/samll_subtract"
                     />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/double_subtract"
                    />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="10sp"
                    android:textColor="@color/yellow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加倍投注"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_height="wrap_content"
                android:src="@mipmap/double_add"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/touzhu"
                android:layout_marginLeft="20px"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
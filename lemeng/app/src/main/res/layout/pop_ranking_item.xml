<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingTop="10px"
    android:paddingBottom="10px"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/rank_number"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_marginLeft="20px"
        android:src="@mipmap/room_rank_1" />

    <com.lvshandian.lemeng.widget.view.AvatarView
        android:id="@+id/rank_head"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="10px"
        android:src="@mipmap/head_default" />

    <TextView
        android:id="@+id/rank_name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_weight="1"
        android:singleLine="true"
        android:textColor="@color/tv_color9"
        android:textSize="30px" />

    <TextView
        android:id="@+id/rank_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30px" />

    <ImageView
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="25px"
        android:src="@mipmap/niu_jinbi" />
</com.zhy.autolayout.AutoLinearLayout>
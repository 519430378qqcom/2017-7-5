<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_bullfight_banker"
    android:layout_width="220px"
    android:layout_height="260px"
    android:layout_marginLeft="12px"
    android:layout_marginTop="10px"
    android:background="@mipmap/bullfight_banker_bg"
    android:visibility="gone">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10px">

        <com.lvshandian.lemeng.widget.view.AvatarView
            android:id="@+id/iv_bullfight_banker_head"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:src="@mipmap/head_default"
            app:civ_border_color="@color/main"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_bullfight_bankername"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5px"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/niuniu_default_banker"
            android:textColor="@color/white"
            android:textSize="24px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3px"
            android:src="@mipmap/bullfight_banker_icon" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75px"
        android:background="@drawable/bg_gray_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2px"
            android:src="@mipmap/niu_jinbi_small" />

        <TextView
            android:id="@+id/tv_bullfight_banker_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_14" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_poker_banker_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px">

        <ImageView
            android:id="@+id/iv_poker_banker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bullfight_poker_nagetive" />

        <ImageView
            android:id="@+id/iv_poker_banker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_bullfight_banker1"
            android:layout_marginLeft="30px"
            android:src="@mipmap/bullfight_poker_nagetive" />

        <ImageView
            android:id="@+id/iv_poker_banker3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_bullfight_banker1"
            android:layout_marginLeft="60px"
            android:src="@mipmap/bullfight_poker_nagetive" />

        <ImageView
            android:id="@+id/iv_poker_banker4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_bullfight_banker1"
            android:layout_marginLeft="90px"
            android:src="@mipmap/bullfight_poker_nagetive" />

        <ImageView
            android:id="@+id/iv_poker_banker5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_bullfight_banker1"
            android:layout_marginLeft="120px"
            android:src="@mipmap/bullfight_poker_nagetive" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/iv_bull_amount0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bullbull"
        android:visibility="gone" />
</com.zhy.autolayout.AutoRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_center_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_personal_center_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17px"
                android:padding="10px"
                android:src="@mipmap/img_back" />

            <TextView
                android:id="@+id/txt_personal_center"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/personal_center"
                android:textColor="@color/white"
                android:textSize="36px" />

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17px"
                android:text="@string/recharge"
                android:textColor="@color/white"
                android:textSize="34px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="25.5px"
            android:text="@string/account_balance"
            android:textColor="@color/white"
            android:textSize="25.5px" />

        <TextView
            android:id="@+id/text_account_balance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginTop="13.5px"
            android:text="100.00"
            android:textColor="@color/white"
            android:textSize="36px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46.5px"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_lock_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:text="@string/lock_balance"
                android:textColor="@color/white"
                android:textSize="25.5px" />

            <TextView
                android:id="@+id/text_le_Money_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="200.00"
                android:textColor="@color/white"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/text_personal_center_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="20px"
            android:text="@string/personal_center_hint"
            android:textColor="@color/white"
            android:textSize="21px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear_choice_personal_center"
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_floating_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_floating_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profit_and_loss_record"
                    android:textColor="@color/black"
                    android:textSize="25.5px" />

                <View
                    android:id="@+id/line_floating_record"
                    android:layout_width="102px"
                    android:layout_height="4.5px"
                    android:layout_marginTop="16.5px"
                    android:background="@color/main"
                    android:visibility="visible" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_deposit_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_deposit_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deposit_record"
                    android:textColor="@color/black"
                    android:textSize="25.5px" />

                <View
                    android:id="@+id/line_deposit_record"
                    android:layout_width="102px"
                    android:layout_height="4.5px"
                    android:layout_marginTop="16.5px"
                    android:background="@color/main"
                    android:visibility="invisible" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_withwraw_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_withwraw_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enchashment_record"
                    android:textColor="@color/black"
                    android:textSize="25.5px" />

                <View
                    android:id="@+id/line_withwraw_record"
                    android:layout_width="102px"
                    android:layout_height="4.5px"
                    android:layout_marginTop="16.5px"
                    android:background="@color/main"
                    android:visibility="invisible" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <FrameLayout
            android:id="@+id/game_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

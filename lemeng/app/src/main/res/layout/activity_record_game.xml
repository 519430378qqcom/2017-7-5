<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_center_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17px"
                android:padding="10px"
                android:src="@mipmap/img_back" />

            <TextView
                android:id="@+id/txt_personal_center"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/personal_center"
                android:textColor="@color/white"
                android:textSize="36px" />

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17px"
                android:text="@string/recharge"
                android:textColor="@color/white"
                android:textSize="32px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="286px"
        android:background="@color/main"
        android:paddingLeft="32px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28px"
            android:text="@string/account_balance"
            android:textColor="@color/white"
            android:textSize="28px" />

        <TextView
            android:id="@+id/text_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            android:text="100.00"
            android:textColor="@color/white"
            android:textSize="48px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear_choice_personal_center"
            android:layout_width="match_parent"
            android:layout_height="84px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_floating_record"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/profit_and_loss_record"
                android:textColor="@color/main"
                android:textSize="28px" />


            <TextView
                android:id="@+id/tv_deposit_record"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/deposit_record"
                android:textColor="@color/tv_color3"
                android:textSize="28px" />


            <TextView
                android:id="@+id/tv_withwraw_record"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/enchashment_record"
                android:textColor="@color/tv_color3"
                android:textSize="28px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/first_line"
                android:layout_width="0dp"
                android:layout_height="6px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <View
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/main"
                    android:visibility="visible" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="6px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="invisible" />

            <View
                android:layout_width="0dp"
                android:layout_height="6px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="invisible" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/line_fa" />

        <android.support.v4.view.ViewPager
            android:id="@+id/my_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

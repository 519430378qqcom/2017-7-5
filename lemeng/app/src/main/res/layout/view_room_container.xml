<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_live_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--观看直播界面-->
    <com.lvshandian.lemeng.widget.VideoSurfaceView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <SurfaceView
        android:id="@+id/SurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fl_pull"
        android:layout_width="220px"
        android:layout_height="380px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="250px"
        android:visibility="gone">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="250px"
            android:layout_height="380px">

            <SurfaceView
                android:id="@+id/video_lian"
                android:layout_width="220px"
                android:layout_height="380px" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fl_plug"
        android:layout_width="300px"
        android:layout_height="450px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="250px">

        <com.qiniu.pili.droid.streaming.widget.AspectFrameLayout
            android:id="@+id/cameraPreview_afl"
            android:layout_width="300px"
            android:layout_height="450px"
            android:layout_gravity="right">

            <include
                layout="@layout/focus_indicator"
                android:visibility="gone" />

            <com.lvshandian.lemeng.view.CameraLivePreviewFrameView
                android:id="@+id/cameraPreview_live_surfaceView"
                android:layout_width="300px"
                android:layout_height="450px"
                android:layout_gravity="right" />
        </com.qiniu.pili.droid.streaming.widget.AspectFrameLayout>

        <ImageView
            android:id="@+id/small_create_coles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10px"
            android:layout_marginTop="10px"
            android:background="@mipmap/close" />
    </com.zhy.autolayout.AutoFrameLayout>


    <!--加载中-->
    <RelativeLayout
        android:id="@+id/rl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_show_gift_animator"
        android:background="@mipmap/zhan_live"
        android:visibility="visible">
        <!--加载背景图-->
        <ImageView
            android:id="@+id/iv_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <com.lvshandian.lemeng.moudles.index.live.gift.GiftFrameLayout
        android:id="@+id/gift_layout1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:visibility="gone"></com.lvshandian.lemeng.moudles.index.live.gift.GiftFrameLayout>


    <com.lvshandian.lemeng.moudles.index.live.gift.GiftFrameLayout
        android:id="@+id/gift_layout2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:visibility="gone"></com.lvshandian.lemeng.moudles.index.live.gift.GiftFrameLayout>

    <com.lvshandian.lemeng.view.ScrollRelativeLayout
        android:id="@+id/scrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_hv_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--家族按钮图-->
            <ImageView
                android:id="@+id/watch_room_jaizu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="150dp"
                android:padding="20px"
                android:src="@mipmap/jiazu"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/fl_bottom_menu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/ll_bottom_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_live_gift"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/mg_room_btn_li" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="19px"
                        android:orientation="horizontal">

                        <com.zhy.autolayout.AutoRelativeLayout
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="19px"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/iv_live_privatechat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@mipmap/mg_room_btn_xin"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/tab_new_indicator"
                                android:layout_width="20px"
                                android:layout_height="20px"
                                android:contentDescription="@string/empty"
                                android:src="@drawable/nim_main_tab_new_message_notify"
                                android:visibility="gone" />

                            <com.netease.nim.uikit.common.ui.drop.DropFake
                                android:id="@+id/tab_new_msg_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="30px"
                                android:layout_marginRight="30px"
                                android:singleLine="true"
                                android:textColor="@android:color/white"
                                android:textSize="10sp"
                                android:visibility="gone" />
                        </com.zhy.autolayout.AutoRelativeLayout>

                        <ImageView

                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginBottom="19px"
                            android:layout_marginLeft="19px"
                            android:background="@mipmap/mg_room_btn_xin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_live_share"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginBottom="19px"
                            android:layout_marginLeft="19px"
                            android:background="@mipmap/mg_room_btn_fen" />

                        <ImageView
                            android:layout_width="60px"
                            android:visibility="gone"
                            android:layout_height="60px"
                            android:layout_marginBottom="19px"
                            android:layout_marginLeft="19px"
                            android:src="@mipmap/close_white" />

                    </com.zhy.autolayout.AutoLinearLayout>


                </com.zhy.autolayout.AutoRelativeLayout>
            </FrameLayout>

            <!--网易云信 直播室-->
            <com.zhy.autolayout.AutoFrameLayout
                android:id="@+id/watch_room_message"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="55px"
                android:layout_marginLeft="10px"
                android:background="@drawable/btn_ticket_labe"
                android:paddingRight="100dp"
                android:visibility="gone"></com.zhy.autolayout.AutoFrameLayout>


            <!--顶部菜单end-->

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/video"
                android:layout_toRightOf="@+id/video">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/all_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="50px"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_gray_shape">

                        <com.lvshandian.lemeng.widget.AvatarView
                            android:id="@+id/live_head"
                            android:layout_width="70px"
                            android:layout_height="match_parent"
                            android:src="@mipmap/head_default" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/all_header"
                            android:layout_width="100px"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5px"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/live_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10px"
                                android:ellipsize="end"
                                android:maxEms="10"
                                android:singleLine="true"
                                android:text="奥特曼"
                                android:textColor="@color/white"
                                android:textSize="24px" />


                            <TextView
                                android:id="@+id/live_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="666"
                                android:textColor="@color/white"
                                android:textSize="23px" />

                        </com.zhy.autolayout.AutoLinearLayout>

                        <Button
                            android:id="@+id/btn_attention"
                            android:layout_width="70px"
                            android:layout_height="40px"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_attention_shape"
                            android:text="关注"
                            android:textColor="@color/white"
                            android:textSize="24px"
                            android:visibility="gone" />


                    </com.zhy.autolayout.AutoLinearLayout>

                    <!--<com.lvshandian.partylive.lib.cjj.MaterialRefreshLayout-->
                    <!--android:id="@+id/mrl_layout_live_audiences"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="3"-->
                    <!--app:overlay="true"-->
                    <!--app:wave_show="false">-->
                    <xiao.free.horizontalrefreshlayout.HorizontalRefreshLayout
                        android:id="@+id/horizontalRefreshLayout"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rlv_list_live_audiences"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" />
                    </xiao.free.horizontalrefreshlayout.HorizontalRefreshLayout>

                    <!--</com.lvshandian.partylive.lib.cjj.MaterialRefreshLayout>-->

                    <ImageView
                        android:id="@+id/live_close"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_margin="10px"
                        android:src="@mipmap/close"
                        android:visibility="visible" />

                </com.zhy.autolayout.AutoLinearLayout>


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/rl_live_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/all_layout"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10px"
                        android:layout_height="45px">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:id="@+id/ll_tp_labe"
                            android:layout_width="wrap_content"
                            android:layout_height="45px"
                            android:layout_marginLeft="-20px"
                            android:background="@drawable/btn_ticket_labe"
                            android:paddingRight="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="30px"
                                android:text="乐票:"
                                android:textColor="@color/white"
                                android:textSize="24px" />

                            <TextView
                                android:id="@+id/live_jinpiao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="24px" />

                        </com.zhy.autolayout.AutoLinearLayout>

                        <TextView
                            android:id="@+id/live_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:layout_marginRight="30px"
                            android:text="乐檬号:1234"
                            android:textColor="@color/white"
                            android:textSize="24px" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <TextView
                        android:id="@+id/room_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginBottom="5px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="5px"
                        android:text="房间号:1234"
                        android:textColor="@color/white"
                        android:textSize="24px"
                        android:visibility="gone" />


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="70px">
                        <!--守护按钮图-->
                        <com.lvshandian.lemeng.widget.AvatarView
                            android:id="@+id/live_head_img"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30px"
                            android:src="@mipmap/head_default"
                            />
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <!--映票labe end-->

                    <!--映票labe-->
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginLeft="-20px"
                        android:layout_marginTop="15px"
                        android:background="@drawable/btn_ticket_labe"
                        android:paddingRight="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="id号:6666"
                            android:textColor="@color/tv_main"
                            android:textSize="24px" />


                    </com.zhy.autolayout.AutoLinearLayout>
                    <!--映票labe end-->
                </com.zhy.autolayout.AutoLinearLayout>

                <include layout="@layout/item_game_infos"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoFrameLayout
                android:id="@+id/watch_room_message_fragment_parent"
                android:layout_width="match_parent"
                android:layout_height="505px"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5px" />

                <fragment
                    android:id="@+id/watch_room_message_fragment"
                    android:name="com.lvshandian.lemeng.wangyiyunxin.chatroom.fragment.ChatRoomMessageFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300px"
                    android:layout_gravity="bottom"
                    android:background="@drawable/btn_ticket_labe" />

                <fragment
                    android:id="@+id/watch_room_message_fragment_gift"
                    android:name="com.lvshandian.lemeng.wangyiyunxin.chatroom.fragment.ChatRoomMessageFragmentGift"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:background="@drawable/btn_ticket_labe" />

                <RelativeLayout
                    android:id="@+id/iv_show_send_gift_lian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/background_show_send_gift"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="连击"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/btn_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="3s"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>

                </RelativeLayout>
            </com.zhy.autolayout.AutoFrameLayout>

            <com.lvshandian.lemeng.view.BarrageView
                android:id="@+id/barrageview"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:layout_above="@+id/watch_room_message_fragment_parent"
                android:layout_marginBottom="22dp"
                android:layout_toEndOf="@+id/watch_room_message"
                android:layout_toRightOf="@+id/watch_room_message" />

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.lvshandian.lemeng.view.ScrollRelativeLayout>
    <!--<fragment
        android:id="@+id/watch_room_message_fragment_gift"
        android:name="com.lvshandian.tangren.wangyiyunxin.chatroom.fragment.ChatRoomMessageFragmentGift"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_above="@+id/watch_room_message_fragment"
        android:layout_marginBottom="5px"
        android:background="@drawable/btn_ticket_labe"
        android:visibility="visible" />

    <fragment
        android:id="@+id/watch_room_message_fragment"
        android:name="com.lvshandian.tangren.wangyiyunxin.chatroom.fragment.ChatRoomMessageFragment"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_ticket_labe" />-->
    <!--家族按钮图-->

</com.zhy.autolayout.AutoRelativeLayout>

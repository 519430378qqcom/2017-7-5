<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/colse_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_pop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:src="@mipmap/colse_rule" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_pop"
            android:layout_width="520px"
            android:layout_height="700px"
            android:layout_centerInParent="true"
            android:background="@mipmap/touzhu_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tzqh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_marginTop="160px"
                android:textColor="@color/tv_color3"
                android:text="投注期号：1520" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1px"
                   android:background="@color/line"
                   android:layout_marginLeft="60px"
                   android:layout_marginRight="60px"
                   android:layout_marginTop="15px"
                   />

            <TextView
                android:id="@+id/tv_ds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_marginTop="60px"
                android:textColor="@color/tv_color3"
                android:text="大小单爽：小，爽" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="15px"
                />

            <TextView
                android:id="@+id/tv_xzjf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_marginTop="60px"
                android:textColor="@color/tv_color3"
                android:text="下注积分：10分" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="15px"
                />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10px"
                  android:text="温馨提示：本房间单期最高派奖金为无限制"
                  android:layout_marginLeft="60px"
                  android:textSize="10sp"
                  />

            <ImageView
                android:id="@+id/sure_tz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rectangle_tz"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
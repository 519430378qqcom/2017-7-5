<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_prapare_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<ImageView-->
        <!--android:id="@+id/iv_bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="centerCrop" />-->
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_colse"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:layout_marginTop="60px"
        android:src="@mipmap/colse_rule" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_colse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px">

        <com.lvshandian.lemeng.widget.AvatarView
            android:id="@+id/iv_head"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_centerInParent="true"
            android:src="@mipmap/head_default" />

        <com.lvshandian.lemeng.widget.AvatarView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_head_bg_dialog" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_dingwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head"
        android:layout_marginTop="50px"
        android:gravity="center">

        <ImageView
            android:layout_width="22px"
            android:layout_height="30px"
            android:scaleType="centerCrop"
            android:src="@mipmap/dingwei_white" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="北京"
            android:textColor="@color/white"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_dingwei"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:gravity="center_horizontal"
        android:hint="给直播写一个标题吧"
        android:textColorHint="@color/white"
        android:background="@null"
        android:textColor="@color/white"
        android:textSize="48px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="320px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/room_wechat1" />

        <ImageView
            android:id="@+id/wechat_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:src="@mipmap/room_timeline1" />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:src="@mipmap/room_qq1" />

        <ImageView
            android:id="@+id/qq_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:src="@mipmap/room_qqzone1" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_start_live"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="35px"
        android:layout_below="@id/ll_share"
        android:background="@drawable/selector_loginbtn_circle"
        android:gravity="center"
        android:text="开始直播"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:textColor="@android:color/white"
        android:textSize="36px" />
</com.zhy.autolayout.AutoRelativeLayout>

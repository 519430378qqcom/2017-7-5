<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <!--直播间用户信息弹框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="572px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:background="@color/line_fa"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27px">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:src="@mipmap/icon_dialog_report" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="举报"
                    android:textColor="@color/tv_color9"
                    android:textSize="24px"
                    android:visibility="visible" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_banned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:src="@mipmap/icon_dialog_banned" />

                <TextView
                    android:id="@+id/tv_banned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="禁言"
                    android:textColor="@color/tv_color9"
                    android:textSize="24px"
                    android:visibility="visible" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="小尚"
                android:textColor="@color/tv_color6"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/iv_sex"
                style="@style/SexImageStyle"
                android:layout_marginLeft="15px"
                android:src="@mipmap/female" />

            <ImageView
                android:id="@+id/iv_grade"
                style="@style/LevelImageStyle"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/rank_3" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:text="乐檬号:10264"
            android:textColor="@color/tv_color9"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28px"
            android:gravity="center_horizontal"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:singleLine="true"
            android:text="这家伙很懒,什么都没有留下!"
            android:textColor="@color/tv_color9" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/tv_color9"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_focus_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="0"
                    android:textColor="@color/tv_color3"
                    android:textSize="14sp" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textColor="@color/tv_color9"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_funs_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="0"
                    android:textColor="@color/tv_color3"
                    android:textSize="14sp" />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出"
                    android:textColor="@color/tv_color9"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_send_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="0"
                    android:textColor="@color/tv_color3"
                    android:textSize="14sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收到"
                    android:textColor="@color/tv_color9"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_gold_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="0"
                    android:textColor="@color/tv_color3"
                    android:textSize="14sp" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="50px"
            android:background="@color/line_eb" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/buttom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+ 关注"
                android:textColor="@color/main"
                android:textSize="30px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_eb" />

            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TA"
                android:textColor="@color/tv_color3"
                android:textSize="30px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_eb" />

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="私信"
                android:textColor="@color/tv_color3"
                android:textSize="30px" />

            <View
                android:id="@+id/line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_eb" />

            <TextView
                android:id="@+id/tv_changkong"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置场控"
                android:textColor="@color/tv_color3"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/mySelf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="主页"
            android:textColor="@color/main"
            android:textSize="36px"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>


    <com.lvshandian.lemeng.widget.view.AvatarView
        android:id="@+id/civ_image"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_marginTop="10px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/head_default" />

    <com.lvshandian.lemeng.widget.view.AvatarView
        android:id="@+id/civ_image_bg"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_head_bg_dialog" />
</com.zhy.autolayout.AutoRelativeLayout>

